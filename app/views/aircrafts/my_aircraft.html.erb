<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Your Aircraft</h1>
    </div>
  </div>

  <div class="row">
    <% @aircrafts.each do |aircraft| %>
      <div class="col-md-4">
        <div class="aircraft-card">
          <div class="aircraft-card-content">
            <div class="aircraft-card-title">
              <h4><%= aircraft.title %></h4>
            </div>
            <p><%= aircraft.description %></p>
            <p><%= aircraft.aircraft_type %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <span>Departure Address</span>
                <div><%= aircraft.departure_address %></div>
              </div>
              <div class="flex align-items-center">
                <span>Arrival Address</span>
                <div><%= aircraft.arrival_address %></div>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
          <%= link_to "More info", aircraft_path(aircraft) %>
            <%= link_to "Edit", edit_aircraft_path(aircraft), class: "ms-3 text-warning" %>
            <%= link_to "Remove", aircraft_path(aircraft), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "ms-3 text-danger"
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
