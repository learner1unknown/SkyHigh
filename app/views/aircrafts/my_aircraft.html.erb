<div class="container mt-3">
  <div class="row">
      <h1 class="col-12">Your Aircraft</h1>
      <p><%= link_to "+ Add an Aircraft listing", new_aircraft_path, class: "btn btn-primary" %></p>
  </div>
  <div class="row g-5">
    <% @aircrafts.each do |aircraft| %>
    <div class="col-3 card-deck ">
      <div class="card rounded-3 h-100 shadow" >
        <% if aircraft.photos.attached? %>
            <%= cl_image_tag aircraft.photos[0].key,:gravity=>"auto", crop: :fill %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= aircraft.aircraft_type %></h5>
          <p class="card-text">
            <p><b><span>Departure City:</span></b>
            <span><%= aircraft.departure_address %></span></p>
            <p><b><span>Arrival City:</span></b>
            <span><%= aircraft.arrival_address %></span></p>
            <p><b>Seats:</b> <%= aircraft.max_occupants %></p>
            <p><b>Price per day:</b> $<%= aircraft.price_per_day %></p>
          </p>
        </div>
        <div class="card-footer bg-transparent border-0">
          <%= link_to "View", aircraft_path(aircraft), class: "btn btn-primary " %>
          <%= link_to "Edit", edit_aircraft_path(aircraft), class: "btn btn-secondary "  %>
          <%= link_to "Remove", aircraft_path(aircraft), class: "btn btn-danger text-white" ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
